{
"$schema": "https://schema.management.azure.com/schemas/2022-01-22/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"parameters": {
    "workspaceName": {
        "type": "String",
        "metadata": {
          "description": "Specifies the name of the workspace."
        }
    },
    "location": {
        "type": "String",
        "allowedValues": [
          "centralus"
        ],
        "defaultValue": "centralus",
        "metadata": {
          "description": "Specifies the location in which to create the workspace."
        }
    },
    "sku": {
        "type": "String",
        "allowedValues": [
          "Free"
        ],
        "defaultValue": "Free",
        "metadata": {
        "description": "Specifies the service tier of the workspace: Free"
    }
      }
},
"resources": [
    {
        "type": "Microsoft.OperationalInsights/workspaces",
        "name": "[parameters('workspaceName')]",
        "apiVersion": "2022-01-22",
        "location": "[parameters('location')]",
        "properties": {
            "sku": {
                "Name": "[parameters('sku')]"
            },
            "features": {
                "searchVersion": 1
            }
        }
      }
   ]
}